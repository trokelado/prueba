{{#if updateProjectForm}}
  <h4>Editar Proyecto {{project.name}}'s {{project.isActive}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=project.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=project.isActive}} {{project.isActive}}
    </div>
    <div class="form-group">
        <label>Coordenada X minima</label>
        {{input type="text" class="form-control" value=project.minX}}
    </div>
    <div class="form-group">
        <label>Coordenada Y minima</label>
        {{input type="text" class="form-control" value=project.minY}}
    </div>
    <div class="form-group">
        <label>Coordenada X máxima</label>
        {{input type="text" class="form-control" value=project.maxX}}
    </div>
    <div class="form-group">
        <label>Coordenada Y máxima</label>
        {{input type="text" class="form-control" value=project.maxY}}
    </div>
    <div class="form-group">
        <label>Referencia espacial</label>
        {{input type="text" class="form-control" value=project.spRef}}
    </div>
      <button {{action 'updateProject1' project}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateProjectForm'}} class="btn btn-warning btn-sm">Editar Proyecto</button>
{{/if}}


