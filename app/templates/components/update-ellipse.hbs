{{#if updateEllipseForm}}
  <h4>Editar Elipse</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=ellipse.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=ellipse.isActive}} {{ellipse.isActive}}
    </div>
    <div class="form-group">
        <label>Referencia</label>
        {{input type="text" class="form-control" value=ellipse.reference}}
    </div>    
    <div class="form-group">
        <label>Color</label>
        {{!--input type="text" class="form-control" value=ellipse.color--}}        
        <select onchange={{action "chooseColor" value="target.value"}}>
          {{#each Colors as |item|}}
            <option value={{item}} selected={{is-equal ellipse.color item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>  
    <div class="form-group">
        <label>Area</label>
        {{input type="text" class="form-control" value=ellipse.area}}
    </div>
    <div class="form-group">
        <label>Perimetro</label>
        {{input type="text" class="form-control" value=ellipse.perimeter}}
    </div>    
    <div class="form-group">
        <label>Unidad del Area</label>
        {{!--input type="text" class="form-control" value=ellipse.uArea--}}        
        <select onchange={{action "chooseUArea" value="target.value"}}>
          {{#each UAreas as |item|}}
            <option value={{item}} selected={{is-equal ellipse.uArea item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>   
    <div class="form-group">
        <label>Unidad del Per√≠metro</label>
        {{!--input type="text" class="form-control" value=ellipse.uPerimeter--}}        
        <select onchange={{action "chooseULongitude" value="target.value"}}>
          {{#each ULongitudes as |item|}}
            <option value={{item}} selected={{is-equal ellipse.uPerimeter item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>
    <div class="form-group">
        <label>Radio en Kilometros</label>
        {{input type="text" class="form-control" value=ellipse.radio}}
    </div>
    <div class="form-group">
        <label>Referencia espacial</label>
        {{input type="text" class="form-control" value=ellipse.spRef}}
    </div>    
    <div class="form-group">
        <label>Coordenadas</label>
        {{textarea class="form-control" rows="1" value=ellipse.json}}        
    </div>
      <button {{action 'updateEllipse' ellipse}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateEllipseForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}