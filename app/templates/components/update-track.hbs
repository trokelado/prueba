{{#if updateTrackForm}}
  <h4>Editar Ruta</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=track.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=track.isActive}} {{track.isActive}}
    </div>
    <div class="form-group">
        <label>Referencia</label>
        {{input type="text" class="form-control" value=track.reference}}
    </div>    
    <div class="form-group">
        <label>Tipo</label>               
        <select onchange={{action "chooseType" value="target.value"}}>
          {{#each Types as |item|}}
            <option value={{item}} selected={{is-equal track.type item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div> 
    <div class="form-group">
        <label>longitud</label>
        {{input type="text" class="form-control" value=track.long}}
    </div> 
    <div class="form-group">
        <label>Unidad de longitud</label>
        {{!--input type="text" class="form-control" value=track.uLong--}}        
        <select onchange={{action "chooseULongitude" value="target.value"}}>
          {{#each ULongitudes as |item|}}
            <option value={{item}} selected={{is-equal track.uLong item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>    
      <button {{action 'updateTrack' track}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateTrackForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}



