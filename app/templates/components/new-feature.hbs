{{#if addNewFeature}}
  <h3>Nuevo Grupo</h3>
  <div>
    <form>    
    <div class="form-group">
        <label for="name">Nombre</label>
        {{input value=name id="name"}}
      </div>
    <div class="form-group">
        <label for="isActive">isActive</label>
        {{input type="checkbox" checked=isActive}} {{isActive}}
        {{!--input value=isActive id="isActive"--}}
      </div>
    <div class="form-group">
        <label for="figura">Figura</label>
        {{!--input value=figura id="figura"--}}
        <select onchange={{action "chooseFigure" value="target.value"}}>
          {{#each figures as |item|}}
            <option value={{item}} selected={{is-equal figure item}}>{{item}}</option>
          {{/each}}
        </select>
      </div>
    <div class="form-group">
        <label for="onsale">En Venta</label>
        {{input type="checkbox" checked=onsale}} {{onsale}}
        {{!--input value=onsale id="onsale"--}}
      </div>            
      <button {{action 'saveFeature'}} class="btn btn-primary">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'featureFormShow'}} class="btn btn-primary">Agregar Grupo</button>
{{/if}}

