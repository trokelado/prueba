{{#if updateLineForm}}
  <h4>Editar LÃ­nea</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=line.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=line.isActive}} {{line.isActive}}
    </div>
    <div class="form-group">
        <label>Referencia</label>
        {{input type="text" class="form-control" value=line.reference}}
    </div>    
    <div class="form-group">
        <label>Color</label>
        {{!--input type="text" class="form-control" value=line.color--}}        
        <select onchange={{action "chooseColor" value="target.value"}}>
          {{#each Colors as |item|}}
            <option value={{item}} selected={{is-equal line.color item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div> 
    <div class="form-group">
        <label>longitud</label>
        {{input type="text" class="form-control" value=line.long}}
    </div> 
    <div class="form-group">
        <label>Unidad de longitud</label>
        {{!--input type="text" class="form-control" value=line.uLong--}}        
        <select onchange={{action "chooseULongitude" value="target.value"}}>
          {{#each ULongitudes as |item|}}
            <option value={{item}} selected={{is-equal line.uLong item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>
    <div class="form-group">
        <label>Referencia espacial</label>
        {{input type="text" class="form-control" value=line.spRef}}
    </div>    
    <div class="form-group">
        <label>Coordenadas</label>
        {{textarea class="form-control" rows="5" value=line.json}}        
    </div>
      <button {{action 'updateLine' line}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateLineForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}

