{{#if updateFreightForm}}
  <h4>Editar Ruta</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=freight.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=freight.isActive}} {{freight.isActive}}
    </div>
      <button {{action 'updateFreight' freight}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateFreightForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}