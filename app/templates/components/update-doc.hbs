{{#if updateDocForm}}
  <h4>Editar Documento</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=doc.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=doc.isActive}} {{doc.isActive}}
    </div>
    <div class="form-group">
        <label>Direcci√≥n</label>
        {{input type="text" class="form-control" value=doc.path}}
    </div>
    <div class="form-group">
        <label>Fecha</label>
        {{input type="date" class="form-control" value=doc.dateIn}}
    </div>    
    <div class="form-group">
        <label>Formato</label>
        {{!--input type="text" class="form-control" value=doc.format--}}        
        <select onchange={{action "chooseFormat" value="target.value"}}>
          {{#each formats as |item|}}
            <option value={{item}} selected={{is-equal format item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>      
      <button {{action 'updateDoc' doc }} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>  
{{else}}
<div>
  <button {{action 'updateDocForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
</div>
{{/if}}


