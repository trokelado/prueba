{{#if updateCubeForm}}
  <h4>Editar Rectángulo</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=rectangle.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=rectangle.isActive}} {{rectangle.isActive}}
    </div>
    <div class="form-group">
        <label>Referencia</label>
        {{input type="text" class="form-control" value=rectangle.reference}}
    </div>    
    <div class="form-group">
        <label>Color</label>
        {{!--input type="text" class="form-control" value=rectangle.color--}}        
        <select onchange={{action "chooseColor" value="target.value"}}>
          {{#each Colors as |item|}}
            <option value={{item}} selected={{is-equal rectangle.color item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>
    <div class="form-group">
        <label>Area</label>
        {{input type="text" class="form-control" value=rectangle.area}}
    </div>
    <div class="form-group">
        <label>Perimetro</label>
        {{input type="text" class="form-control" value=rectangle.perimeter}}
    </div>
    <div class="form-group">
        <label>Unidad del Area</label>
        {{!--input type="text" class="form-control" value=rectangle.uArea--}}        
        <select onchange={{action "chooseUArea" value="target.value"}}>
          {{#each UAreas as |item|}}
            <option value={{item}} selected={{is-equal rectangle.uArea item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>   
    <div class="form-group">
        <label>Unidad del Perímetro</label>
        {{!--input type="text" class="form-control" value=rectangle.uPerimeter--}}        
        <select onchange={{action "chooseULongitude" value="target.value"}}>
          {{#each ULongitudes as |item|}}
            <option value={{item}} selected={{is-equal rectangle.uPerimeter item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>
    <div class="form-group">
        <label>Coordenadas</label>
        {{input type="text" class="form-control" value=rectangle.json}}
    </div>
      <button {{action 'updateCube' rectangle}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCubeForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}

