{{#if addNewDoc}}
<h3>Documento Nuevo</h3>
  <div>
    <form>
      <div class="form-group">        
        <label for="name">Name</label>
        {{input value=name id="name"}}
    </div>
    <div class="form-group">
        <label for="isActive">isActive</label>
        {{input type="checkbox" checked=isActive}} {{isActive}}
    </div>
    <div class="form-group">
        <label for="path">Direccion</label>
        {{input value=path id="path"}}        
    </div>
     <div class="form-group">
        <label for="datein">Incorporado</label>
        {{input type="date" value=dateIn id="datein"}}
    </div>    
    <div class="form-group">
        <label>Formato</label>               
        <select onchange={{action "chooseFormat" value="target.value"}}>
          {{#each formats as |item|}}
            <option value={{item}}>{{item}}</option>
          {{/each}}
        </select> 
      </div>    
      <button {{action 'saveDoc'}} class="btn btn-primary btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'docFormShow'}} class="btn btn-primary btn-sm">Agregar Documento</button>
{{/if}}
