{{#if updateMobilForm}}
  <h4>Editar {{mobil.name}}'s {{mobil.isActive}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=mobil.name}}
      </div>
      <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=mobil.isActive}} {{mobil.isActive}}
      </div>
      {{#if isPoint}}
        <div class="form-group">
            <label>Icono</label>
            {{input type="text" class="form-control" value=mobil.logo}}
        </div>
        {{#if isForSale}}
          <div class="form-group">
            <label>Taxonomía</label>
            {{input type="text" class="form-control" value=mobil.taxo}}
          </div>
          <div class="form-group">
              <label>Tamaño</label>
              {{input type="text" class="form-control" value=mobil.size}}
          </div>
        {{/if}}
      {{/if}}
      {{#if isLine}}
        <div class="form-group">
            <label>Color</label>
            <select onchange={{action "chooseColor" value="target.value"}}>
            {{#each Colors as |item|}}
              <option value={{item}} selected={{is-equal mobil.color item}}>{{item}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label>Unidad de Longitud</label>
          {{!--input type="text" class="form-control" value=polygon.uPerimeter--}}        
          <select onchange={{action "chooseULongitude" value="target.value"}}>
            {{#each ULongitudes as |item|}}
              <option value={{item}} selected={{is-equal mobil.uLong item}}>{{item}}</option>
            {{/each}}
          </select> 
      </div>
      {{/if}}
      {{#if isPolygon}}
        <div class="form-group">
            <label>Color</label>          
            <select onchange={{action "chooseColor" value="target.value"}}>
            {{#each Colors as |item|}}
              <option value={{item}} selected={{is-equal mobil.color item}}>{{item}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label>Unidad del Area</label>
          {{!--input type="text" class="form-control" value=polygon.uArea--}}        
          <select onchange={{action "chooseUArea" value="target.value"}}>
            {{#each UAreas as |item|}}
              <option value={{item}} selected={{is-equal mobil.uArea item}}>{{item}}</option>
            {{/each}}
          </select> 
      </div>   
      <div class="form-group">
          <label>Unidad del Perímetro</label>
          {{!--input type="text" class="form-control" value=polygon.uPerimeter--}}        
          <select onchange={{action "chooseULongitude" value="target.value"}}>
            {{#each ULongitudes as |item|}}
              <option value={{item}} selected={{is-equal mobil.uLong item}}>{{item}}</option>
            {{/each}}
          </select> 
      </div>
      {{/if}}
      {{#if isEllipse}}
        <div class="form-group">
            <label>Color</label>
            <select onchange={{action "chooseColor" value="target.value"}}>
            {{#each Colors as |item|}}
              <option value={{item}} selected={{is-equal mobil.color item}}>{{item}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label>Radio en Km.</label>
          {{input type="text" class="form-control" value=mobil.radio}}
        </div>
        <div class="form-group">
          <label>Unidad del Area</label>
          {{!--input type="text" class="form-control" value=polygon.uArea--}}        
          <select onchange={{action "chooseUArea" value="target.value"}}>
            {{#each UAreas as |item|}}
              <option value={{item}} selected={{is-equal mobil.uArea item}}>{{item}}</option>
            {{/each}}
          </select> 
        </div>   
        <div class="form-group">
          <label>Unidad del Perímetro</label>
          {{!--input type="text" class="form-control" value=polygon.uPerimeter--}}        
          <select onchange={{action "chooseULongitude" value="target.value"}}>
            {{#each ULongitudes as |item|}}
              <option value={{item}} selected={{is-equal mobil.uLong item}}>{{item}}</option>
            {{/each}}
          </select> 
        </div>    
      {{/if}}    
      <button {{action 'updateMobil' mobil}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateMobilForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}


