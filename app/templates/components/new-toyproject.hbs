{{#if addNewToyProject}}
  <h3>Agregar el Proyecto</h3>
  <div>
    <form>    
        <div class="form-group">
            <label for="name">Nombre</label>
            {{input value=name id="name"}}
        </div>
        <div class="form-group">
            <label for="isActive">isActive</label>
            {{input type="checkbox" checked=isActive}} {{isActive}}        
        </div>
        <div class="form-group">
            <label for="proyecto">Proyecto</label>        
            <select onchange={{action "chooseProject" value="target.value"}}>
            {{#each sortedProjects as |item|}}
                <option value={{item.id}}>{{item.name}}</option>
                <!--option value={{item}} selected={{is-equal project item}}>{{item}}</option-->                
            {{/each}}
            </select>
        </div>
                        
        <button {{action 'saveToyProject'}} class="btn btn-primary">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'formShow'}} class="btn btn-primary">Agregar Proyecto</button>
{{/if}}


