{{#if updateFeatureForm}}
  <h4>Editor del grupo {{feature.name}}</h4>
  <div>
    <form>      
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=feature.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>
        {{input type="checkbox" checked=feature.isActive}} {{feature.isActive}}
        {{!--input type="text" class="form-control" value=feature.isActive--}}
    </div>
    <div class="form-group">
        <label>Figura</label>
        {{!--input type="text" class="form-control" value=feature.figure disabled=true--}}        
        <select onchange={{action "chooseFigure" value="target.value"}}>
          {{#each figures as |item|}}
            <option value={{item.id}} selected={{is-equal figure item.id}}>{{item.name}}</option>
          {{/each}}
        </select> 
    </div>
    
    <div class="form-group">
        <label>Para venta</label>        
        {{input type="checkbox" checked=feature.onsale}} {{feature.onsale}}
        {{!--input type="text" class="form-control" value=feature.onsale--}}
        {{!-- {{input type="checkbox" checked=someControllerProperty}}. This will bind the checked value as a boolean to whatever controller property you pass to the input helper's checked attribute --}}
    </div>
      <button {{action 'updateFeature' feature}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateFeatureForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}

