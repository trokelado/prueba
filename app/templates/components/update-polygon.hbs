{{#if updatePolygonForm}}
  <h4>Editar Polígono</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=polygon.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=polygon.isActive}} {{polygon.isActive}}
    </div>
    <div class="form-group">
        <label>Referencia</label>
        {{input type="text" class="form-control" value=polygon.reference}}
    </div>    
    <div class="form-group">
        <label>Color</label>
        {{!--input type="text" class="form-control" value=polygon.color--}}        
        <select onchange={{action "chooseColor" value="target.value"}}>
          {{#each Colors as |item|}}
            <option value={{item}} selected={{is-equal polygon.color item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>
    <div class="form-group">
        <label>Area</label>
        {{input type="text" class="form-control" value=polygon.area}}
    </div>
    <div class="form-group">
        <label>Perimetro</label>
        {{input type="text" class="form-control" value=polygon.perimeter}}
    </div>    
    <div class="form-group">
        <label>Unidad del Area</label>
        {{!--input type="text" class="form-control" value=polygon.uArea--}}        
        <select onchange={{action "chooseUArea" value="target.value"}}>
          {{#each UAreas as |item|}}
            <option value={{item}} selected={{is-equal polygon.uArea item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>   
    <div class="form-group">
        <label>Unidad del Perímetro</label>
        {{!--input type="text" class="form-control" value=polygon.uPerimeter--}}        
        <select onchange={{action "chooseULongitude" value="target.value"}}>
          {{#each ULongitudes as |item|}}
            <option value={{item}} selected={{is-equal polygon.uPerimeter item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>
        <div class="form-group">
        <label>Referencia espacial</label>
        {{input type="text" class="form-control" value=polygon.spRef}}
    </div>
    <div class="form-group">
        <label>Coordenadas</label>
        {{textarea class="form-control" rows="5" value=polygon.json}}        
    </div>
      <button {{action 'updatePolygon' polygon}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updatePolygonForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}
