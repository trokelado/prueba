{{#if addNewMobil}}
<h3>Componente Nuevo</h3>
  <div>
    <form>
      <div class="form-group">        
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>
      <div class="form-group">
          <label for="isActive">isActive</label>
          {{input type="checkbox" checked=isActive}} {{isActive}}
      </div>
      {{#if isPoint}}
        <div class="form-group">
            <label for="logo">Icono</label>
            {{input value=logo id="logo"}}        
        </div>
        {{#if isForSale}}
          <div class="form-group">
              <label for="taxo">Nombre Científico</label>
              {{input value=taxo id="taxo"}}
          </div>
          <div class="form-group">
              <label for="size">Tamaño comercial</label>
              {{input value=size id="size"}}        
          </div>
        {{/if}}
      {{/if}}
      {{#if isLine}}
        <div class="form-group">
            <label>Color</label>
            <select onchange={{action "chooseColor" value="target.value"}}>
            {{#each Colors as |item|}}
              <option value={{item}} selected={{is-equal color item}}>{{item}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label>Unidad de Longitud</label>                  
          <select onchange={{action "chooseULongitude" value="target.value"}}>
            {{#each ULongitudes as |item|}}
              <option value={{item}} selected={{is-equal uLong item}}>{{item}}</option>
            {{/each}}
          </select> 
      </div>
      {{/if}}
      {{#if isPolygon}}
        <div class="form-group">
            <label>Color</label>          
            <select onchange={{action "chooseColor" value="target.value"}}>
            {{#each Colors as |item|}}
              <option value={{item}} selected={{is-equal color item}}>{{item}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label>Unidad del Area</label>
          {{!--input type="text" class="form-control" value=polygon.uArea--}}        
          <select onchange={{action "chooseUArea" value="target.value"}}>
            {{#each UAreas as |item|}}
              <option value={{item}} selected={{is-equal uArea item}}>{{item}}</option>
            {{/each}}
          </select> 
      </div>   
      <div class="form-group">
          <label>Unidad del Perímetro</label>
          {{!--input type="text" class="form-control" value=polygon.uPerimeter--}}        
          <select onchange={{action "chooseULongitude" value="target.value"}}>
            {{#each ULongitudes as |item|}}
              <option value={{item}} selected={{is-equal uLong item}}>{{item}}</option>
            {{/each}}
          </select> 
      </div>
      {{/if}}
      {{#if isEllipse}}
        <div class="form-group">
            <label>Color</label>
            <select onchange={{action "chooseColor" value="target.value"}}>
            {{#each Colors as |item|}}
              <option value={{item}} selected={{is-equal color item}}>{{item}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="radio">Radio en Km.</label>
          {{input value=radio id="radio"}}        
        </div>        
        <div class="form-group">
          <label>Unidad del Area</label>
          {{!--input type="text" class="form-control" value=polygon.uArea--}}        
          <select onchange={{action "chooseUArea" value="target.value"}}>
            {{#each UAreas as |item|}}
              <option value={{item}} selected={{is-equal uArea item}}>{{item}}</option>
            {{/each}}
          </select> 
        </div>   
        <div class="form-group">
          <label>Unidad del Perímetro</label>
          {{!--input type="text" class="form-control" value=polygon.uPerimeter--}}        
          <select onchange={{action "chooseULongitude" value="target.value"}}>
            {{#each ULongitudes as |item|}}
              <option value={{item}} selected={{is-equal uLong item}}>{{item}}</option>
            {{/each}}
          </select> 
        </div>    
      {{/if}}
      <button {{action 'saveMobil'}} class="btn btn-primary">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'mobilFormShow'}} class="btn btn-primary">Agregar Componente</button>
{{/if}}
