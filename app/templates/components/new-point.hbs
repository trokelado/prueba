{{#if addNewPoint}}
<h3>Punto Nuevo</h3>
  <div>
    <form>
      <div class="form-group">        
        <label for="name">Nombre</label>
        {{input value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="isActive">isActive</label>
        {{input type="checkbox" checked=isActive}} {{isActive}}
      </div>
      <div class="form-group">
        <label for="reference">Referencia</label>
        {{input value=reference id="reference"}}        
      </div>
      <div class="form-group">
        <label for="icon">Icono</label>
        {{input value=icon id="icon"}}
      </div>
      <div class="form-group">
        <label for="spRef">Referencia espacial</label>
        {{input value=spRef id="spRef"}}        
      </div>
      <div class="form-group">
        <label for="X">Coordenada X</label>
        {{input value=X id="X"}}        
      </div>
      <div class="form-group">
        <label for="Y">Coordenada Y</label>
        {{input value=Y id="Y"}}        
      </div>    
      <button {{action 'savePoint'}} class="btn btn-warning btn-sm">Guardar Punto</button>
    </form>
  </div>             
{{else}}  
  <button {{action 'pointFormShow'}} class="btn btn-primary btn-sm">Agregar Punto</button>
{{/if}}

