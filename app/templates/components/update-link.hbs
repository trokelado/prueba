{{#if updateLinkForm}}
  <h4>Editar trayectoria</h4>
  <div>
    <form>
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=link.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>        
        {{input type="checkbox" checked=link.isActive}} {{link.isActive}}
    </div>
    <div class="form-group">
        <label>Referencia</label>
        {{input type="text" class="form-control" value=link.reference}}
    </div>    
    <div class="form-group">
        <label>Color</label>
        {{!--input type="text" class="form-control" value=link.color--}}        
        <select onchange={{action "chooseColor" value="target.value"}}>
          {{#each Colors as |item|}}
            <option value={{item}} selected={{is-equal link.color item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div> 
    <div class="form-group">
        <label>longitud</label>
        {{input type="text" class="form-control" value=link.long}}
    </div> 
    <div class="form-group">
        <label>Unidad de longitud</label>
        {{!--input type="text" class="form-control" value=link.uLong--}}        
        <select onchange={{action "chooseULongitude" value="target.value"}}>
          {{#each ULongitudes as |item|}}
            <option value={{item}} selected={{is-equal link.uLong item}}>{{item}}</option>
          {{/each}}
        </select> 
    </div>
    <div class="form-group">
        <label>Referencia espacial</label>
        {{input type="text" class="form-control" value=link.spRef}}
    </div>    
    <div class="form-group">
        <label>Coordenadas</label>
        {{textarea class="form-control" rows="5" value=link.json}}        
    </div>
      <button {{action 'updateLink' link}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateLinkForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}


