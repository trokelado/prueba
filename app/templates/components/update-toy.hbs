{{#if updateForm}}
  <h4>Editar Usuario</h4>
  <div>
    <form>
        <div class="form-group">
            <label>Nombre</label>
            {{input type="text" class="form-control" value=toy.name}}
        </div>
        <div class="form-group">
            <label>Activa</label>        
            {{input type="checkbox" checked=toy.isActive}} {{toy.isActive}}
        </div>
        <div class="form-group">
            <label>Rol</label>                                      
            <select onchange={{action "chooseRol" value="target.value"}}>
                {{#each roles as |item|}}
                    <option value={{item}} selected={{is-equal toy.rol item}}>{{item}}</option>
                {{/each}}
            </select> 
        </div>    
        <button {{action 'updateToy' toy}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}    
    <button {{action 'updateForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
    {{toy.name}}   rol: {{toy.rol}}
{{/if}}

