{{#if updateShipmentForm}}
  <h4>Editor del grupo {{shipment.name}}</h4>
  <div>
    <form>      
      <div class="form-group">
        <label>Nombre</label>
        {{input type="text" class="form-control" value=shipment.name}}
    </div>
    <div class="form-group">
        <label>Activa</label>
        {{input type="checkbox" checked=shipment.isActive}} {{shipment.isActive}}
        {{!--input type="text" class="form-control" value=shipment.isActive--}}
    </div>            
      <button {{action 'updateShipment' shipment}} class="btn btn-warning btn-sm">Guardar</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateShipmentForm'}} class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil"></span></button>
{{/if}}

